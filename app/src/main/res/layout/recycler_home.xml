<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/rec_user_id"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/rec_user_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/bitmap1"/>

        <TextView
            android:fontFamily="@font/hero"
            android:id="@+id/rec_user_name"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="7dp"
            android:text="IKEA Chair"
            android:textColor="#a9a9b0"
            android:textSize="16sp"/>

        <LinearLayout
            android:layout_marginTop="4dp"
            android:layout_marginStart="7dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imagers"
                android:visibility="gone"
                android:layout_marginTop="4dp"
                android:layout_width="8dp"
                android:layout_height="8.5dp"
                android:src="@drawable/ic_rupee"/>

            <TextView
                android:fontFamily="@font/hero"
                android:id="@+id/rec_user_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:textSize="14sp"
                android:textColor="#3b3b3b"
                android:text="12,000"/>


        </LinearLayout>


    </LinearLayout>



</LinearLayout>